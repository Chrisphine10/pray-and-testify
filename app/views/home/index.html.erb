<!-- Masthead-->
	<header class="masthead mastbg">
		<div class="container">
			<div class="masthead-subheading">Welcome To Pray and Testify!</div>
			<div class="masthead-heading text-uppercase">Let's pray together</div>
			<a data-toggle="modal" data-target="#approvalModal" class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="#">Submit a Prayer</a>
		</div>
	</header>
<section class="pt-4 page-section">
	<div class="container">
		<!-- Modal -->
	<div class="modal fade" id="approvalModal" tabindex="-1" role="dialog" aria-labelledby="approvalModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
		<div class="modal-header">
			<h4 class="modal-title">Submit Prayer</h4>
		</div>

		<div class="modal-body">
		  <div class="row text-center">
			<div class="col-md-12">
			<%= render 'posts/form', post: @post %>
			</div>
		</div>	
		</div>
		
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
</div>
</section>

<!-- Services-->

<section class="page-section" id="services">
	<div class="container">
		<div class="text-center">
			<h2 class="section-heading text-uppercase">Testimonials</h2>
			<h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
		</div>
		<div class="row text-center">
		<% @posts.each do |post| %>
		<% if post.testimony %>
			<div class="col-md-4">
				<div class="card">
					<h4 class="my-3"><%= post.title %></h4>
					Prayer: <p class="text-muted">	<%= post.content %></p>
				    Testimony: <p class="text-muted">	<%= post.testimony.content %></p>
				</div>
			</div>
				<% end %>
			<% end%>
		</div>
	</div>
</section>

