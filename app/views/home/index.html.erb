	<!-- About-->
<section class="page-section" id="about">
	<div class="container">
		<div class="text-center">
			<h2 class="section-heading text-uppercase">Bible Devotions</h2>
			<h3 class="section-subheading text-muted">Get inspired and tranformed with daily Bible verses.</h3>
		</div>
		<ul class="timeline">
			<% @devotions.each do |devotion, index| %>
		   <% if (devotion.id % 2 == 0) then %> 
			<li>
				<div class="timeline-image"><img class="rounded-circle img-fluid" src="<%= image_path('about/3.jpg') %>" alt="" /></div>
				<div class="timeline-panel">
					<div class="timeline-heading">
						<h4><%= devotion.verse %></h4>
						<h4 class="subheading"><%= devotion.title %></h4>
					</div>
					<div class="timeline-body"><p class="text-muted"><%= devotion.content %></p></div>
				</div>
			</li>
			<% else %>
			<li class="timeline-inverted">
				<div class="timeline-image"><img class="rounded-circle img-fluid" src="<%= image_path('about/3.jpg') %>" alt="" /></div>
				<div class="timeline-panel">
					<div class="timeline-heading">
						<h4><%= devotion.verse %></h4>
						<h4 class="subheading"><%= devotion.title %></h4>
					</div>
					<div class="timeline-body"><p class="text-muted"><%= devotion.content %></p></div>
				</div>
			</li>
		    <% end %>
			<% end %>
			<li class="timeline-inverted">
				<div class="timeline-image">
		
		
					<h4>Subscribe<br />Get inspired<br />Daily!</h4>
				</div>
			</li>
		</ul>
	</div>
</section>
